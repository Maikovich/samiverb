{% extends "SamiverbBundle::base.html.twig" %}

{% block title %}
  A convenient conjugating tool
{% endblock %}

{% block navbar_add %}
  <form class="navbar-form navbar-right">
    <button class="btn btn-default" id="goToTop" onclick="scrollToTarget('#enterverb')">
      <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span> Go to top
    </button>
  </form>
{% endblock %}

{% block content %}

  <section id="enterverb">
    <div id="front">
    <div class="container">
    <div class="col-xs-12">
    <div class="row">
    <div class="col-xs-12 col-sm-12 text-center">
      <h1 class="title">Samiverb</h1>
      <ol id="cooltext" class="list-unstyled text-center">
        <li>Click on the form</li>
        <li>Type in a verb</li>
        <li>Press conjugate</li>
      </ol>
      <form class="text-center" name="verbForm" id="conjugform" ng-controller="VerbController" ng-submit="verbForm.$valid && requestVerbInfo()" novalidate>
        <div class="form-group">
          <label class="sr-only" for="verb">Verb</label>
          <div class="form-group">
            <input ng-model="verb" type="text" class="form-control input-lg text-center" id="verb" placeholder="Enter a verb" pattern=".{4,}" required>
          </div>
          <button type="submit" id="conjugate-btn" class="btn btn-lg btn-primary ladda-button" data-style="slide-down"><span class="ladda-label">Conjugate</span></button>
        </div>
      </form>
    </div><!-- /.col-xs-12 col-sm-12 text-center -->
    </div><!-- /.row -->
    </div><!-- /.col-xs-12 -->
    </div><!-- /.container -->
    </div><!-- /#front -->
  </section>

  <section id="conjugations">
    <div id="conjug" ng-cloak>
    <div class="container">
    <div class="row">
    <div class="col-xs-12 col-sm-12">
    <div ng-controller="OutputController">
      <alert-suggestions></alert-suggestions>
      <alert-notvalidated></alert-notvalidated>
      <alert-invalid></alert-invalid>
      <verbresult></verbresult>
    </div><!-- /ngOutputController -->
    </div><!-- /.col-xs-12 col-sm-12 -->
    </div><!-- /.row -->
    </div><!-- /.container -->
    </div><!-- /#conjug -->
  </section>

  <validate-modal></validate-modal>
  <revalidate-modal></revalidate-modal>

{% endblock %}